<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-hover table-aut">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to '', user, :class=>"far fa-eye" %></td>
        <td><%= link_to '', edit_user_path(user), :class=>"fas fa-edit" %></td>
        <td><%= link_to '',  user, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"far fa-trash-alt" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

